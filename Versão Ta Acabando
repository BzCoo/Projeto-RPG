caminhos_disponiveis = [1, 2, 3]

while caminhos_disponiveis:
    print("\nCaminhos disponÃ­veis:")
    for c in caminhos_disponiveis:
        if c == 1:
            print("(1) FLORESTA")
        elif c == 2:
            print("(2) CAVERNA")
        elif c == 3:
            print("(3) CASTELO")

    try:
        caminho = int(input("Selecione seu caminho: "))
    except ValueError:
        print("Escolha invÃ¡lida. Digite o nÃºmero do caminho.")
        continue

    if caminho not in caminhos_disponiveis:
        print("Esse caminho jÃ¡ foi escolhido ou nÃ£o existe. Tente outro.")
        continue

    
    caminhos_disponiveis.remove(caminho)

    if caminho == 1:
        print(
