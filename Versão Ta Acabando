            ataque_goblin = 10

            while vida > 0 and vida_goblin > 0:
                print(f"\nSua vida: {vida} | Vida do Goblin Rei: {vida_goblin}")
                acao = input("Escolha sua aÃ§Ã£o: (1) Atacar  (2) Mochila: ")

                if acao == "1":
                    vida_goblin -= ataque
                    print(f"VocÃª atacou! Vida do Goblin Rei agora: {vida_goblin}")
                elif acao == "2":
                    print(f"Mochila: {mochila}")
                    if p_vida in mochila:
                        usar = input("Usar poÃ§Ã£o de vida? (s/n): ").lower()
                        if usar == "s":
                            vida += p_vida
                            mochila.remove(p_vida)
                            print(f"VocÃª usou a poÃ§Ã£o! Sua vida agora: {vida}")
                    else:
                        print("VocÃª nÃ£o tem itens utilizÃ¡veis.")
                else:
                    print("AÃ§Ã£o invÃ¡lida.")

                if vida_goblin > 0:
                    vida -= ataque_goblin
                    print(f"O Goblin Rei atacou! Sua vida agora: {vida}")

            if vida > 0:
                print("VocÃª derrotou o Goblin Rei!")
            else:
                print("VocÃª foi derrotado pelo Goblin Rei...")
                print("GAME OVER")
                exit()

        elif batalha_goblin == "2":
